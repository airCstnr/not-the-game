{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run main",
      "type": "python",
      "request": "launch",
      "program": "src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Run unit tests",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "justMyCode": true,
      "args": ["discover", "--start-directory", "src", "--pattern", "\"*.py\""]
    }
  ]
}
